block main
  include ./src/mixins/text_field/textfield.pug
  include ./src/mixins/checkbox/checkbox.pug
  include ./src/mixins/checkbox_text_adv/checkbox_text_adv.pug
  include ./src/mixins/button/button.pug

  include ./src/includes/logo/logo.pug
  div.form_elements_container
    div.form_elements_col
      +textfield('Textfield', 'Email', '')
      div.clearfix.spaceholder
      include ./src/includes/dropdown/dropdown.pug
      div.clearfix.spaceholder
      +textfield('Masked Text Field', '', '.masked_text_field__date')
      div.clearfix.spaceholder
      include ./src/includes/date_dropdown/date_dropdown.pug
      div.clearfix.spaceholder
      include ./src/includes/filter_date_dropdown/filter_date_dropdown.pug
      div.clearfix.spaceholder
      include ./src/includes/subscription_textfield/subscription_textfield.pug
      div.clearfix.spaceholder
    div.form_elements_col
      include ./src/includes/checkbox_btn/checkbox_btn.pug
      div.clearfix.spaceholder
      include ./src/includes/radio_btn/radio_btn.pug
      div.clearfix.spaceholder
      include ./src/includes/toggle/toggle.pug
      div.clearfix.spaceholder
      include ./src/includes/like_btn/like_btn.pug
      div.clearfix.spaceholder
      include ./src/includes/rate_btn/rate_btn.pug
      div.clearfix.spaceholder
    div.form_elements_col
      include ./src/includes/range_slider/range_slider.pug
      div.clearfix.spaceholder
      include ./src/includes/buttons/buttons.pug
      div.clearfix.spaceholder
      div.clearfix.spaceholder
      include ./src/includes/pagination/pagination.pug
      div.clearfix.spaceholder     
  div.form_elements_container.form_elements_container_horisontal
    div.form_elements_col.form_elements_col_horisontal
      include ./src/includes/dropdown/dropdown.pug
      div.clearfix.spaceholder
      include ./src/includes/dropdown/dropdown.pug
      div.clearfix.spaceholder
      include ./src/includes/dropdown/dropdown.pug
      div.clearfix.spaceholder
    div.form_elements_col.form_elements_col_horisontal
      include ./src/includes/exp_checkbox/exp_checkbox.pug
      div.clearfix.spaceholder
      include ./src/includes/rich_check_btn/rich_check_btn.pug 
      div.clearfix.spaceholder
      include ./src/includes/bullet_list/bullet_list.pug
      div.clearfix.spaceholder
    div.form_elements_col.form_elements_col_horisontal
      include ./src/includes/comfort_icons/comfort_icons.pug
      div.clearfix.spaceholder
      include ./src/includes/review/review.pug
      
   
append scripts
  script(src="./src/scripts/jquery.inputmask.js" type="text/javascript")
  script(src="./src/includes/exp_checkbox/exp_checkbox.js") 
  script(src="./src/includes/range_slider/range_slider.js")
  script(src="./src/scripts/air-datepicker/dist/js/datepicker.min.js")
  script(src="./src/includes/date_dropdown/date_dropdown.js")
  script(src="./src/includes/filter_date_dropdown/filter_date_dropdown.js")
  script(src="./src/includes/datepicker/datepicker.js")
  script(src="./src/includes/buttons/buttons.js")
  script(src="./src/includes/subscription_textfield/subscription_textfield.js")
  script(src="./src/includes/dropdown/spin-number-plugin.js")
  script(src="./src/includes/dropdown/dropdown.js")
