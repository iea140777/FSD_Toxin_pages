mixin button(style, title, linkAddress)
  - var style = style
  case style
    when 'colored'
      form.button__container
        a.button.button_colored(href=linkAddress, target="_blank")
          h3.button__label=title
    when 'bordered'
      form.button__container.button__container_bordered
        a.button.button_bordered(href=linkAddress, target="_blank")
          h3.button__label=title  
    when 'text'
      form.button__container.button__container_text
        a.button.button_text(href=linkAddress, target="_blank")
          h3.button__label=title  
    when 'arrow'
      form.button__container
        a.button.button_colored.button_arrow(href=linkAddress, target="_blank")
          h3.button__label=title
            i.material-icons.button__arrow-forward arrow_forward
    
            
    
