mixin dropdown-guests-mixin(item_title1, item_title2, item_title3)
  div.dropdown-guests__container
    input.dropdown-guests__input(type='text' name='guests' autocomplete="off" placeholder="Сколько гостей" readonly)
    ul.dropdown-guests__list
      li.dropdown__list-item
        div.dropdown__list-item__title
          h3=item_title1
        div.counter.dropdown__counter1(min="0", max="20", step="1")
      li.dropdown__list-item
        div.dropdown__list-item__title
          h3=item_title2
        div.counter.dropdown__counter2(min="0", max="20", step="1")
      li.dropdown__list-item
        div.dropdown__list-item__title
          h3=item_title3
        div.counter.dropdown__counter3(min="0", max="20", step="1") 
      li.dropdown__list-item.dropdown__buttons
        input.dropdown__button.dropdown__button_clear(type='button' value='Очистить' class='invisible')
        input.dropdown__button.dropdown__button_apply(type='button' value='Применить')


+dropdown-guests-mixin('Взрослые', 'Дети', 'Младенцы')
